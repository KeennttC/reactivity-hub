{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "messages": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$messageId": {
        "reactions": {
          ".read": "auth != null",
          ".write": "auth != null"
        }
      }
    },
    "polls": {
      ".read": true,
      ".write": true
    },
    "userStatus": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "users": {
      ".read": "auth != null",
      "$uid": {
        ".write": "$uid === auth.uid"
      }
    },
    "profilePictures": {
      "$uid": {
        ".read": "auth != null",
        ".write": "$uid === auth.uid"
      }
    }
  }
}