{
  "rules": {
    ".read": "auth != null",
    ".write": "auth != null",
    "messages": {
      ".read": "auth != null",
      ".write": "auth != null"
    },
    "polls": {
      ".read": true,
      ".write": "auth != null"
    },
    "userStatus": {
      ".read": "auth != null",
      "$uid": {
        ".write": "$uid === auth.uid"
      }
    },
    "users": {
      ".read": "auth != null",
      "$uid": {
        ".write": "$uid === auth.uid"
      }
    }
  }
}